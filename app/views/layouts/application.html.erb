<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     
  </head>

  <body class="d-flax-column vh-100">
    <body class="d-flex flex-column vh-100">
    <header class="bg-dark  shadow-sm ">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-p-3 text-white " href="/">Bookers</a>
          <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon bg-white"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
 
            <% if user_signed_in? %>
            <li class="nav-item text-white">
            <i class="fas fa-home"></i>
            <%= link_to "Home", user_path(current_user.id), class: "btn btn-dark" %>
            <!--<a href="/user/(current_user)", class= "btn btn-dark">Homes</a>-->
            </li> 
            <li class="nav-item text-white">
            <i class="fas fa-users"></i>
            <a href="/users", class= "btn btn-dark">Users</a>
            </li> 
            <li class="nav-item text-white">
            <i class="fas fa-book-open"></i>
            <a href="/books", class= "btn btn-dark">Books</a>
            </li> 
            <li class="nav-item ">
            <i class="fas fa-sign-in-alt text-white"></i>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-dark" %>
            </li class="nav-item">
            <% else %>
            <li class="nav-item text-white">
            <i class="fas fa-link"></i>
            <a href="/users/new", class= "btn btn-dark">About</a>
            </li> 
            <li. class="nav-item ">
            <i class="fas fa-user text-white"></i>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-dark" %>
            </li>
            <li class="nav-item">
            <i class="fas fa-sign-in-alt text-white"></i>
            <%= link_to "Log in", new_user_session_path, class: "btn btn-dark" %>
            </li>
            <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    
   <footer class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight infratop.inc</p>
          </div>
        </div>
    </footer>
  </body>
</html>
