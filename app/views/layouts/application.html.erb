<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <script src="https://kit.fontawesome.com/*******.js" crossorigin="anonymous"></script>
  </head>

  <body class="d-flax-column vh-100">
    <body class="d-flex flex-column vh-100">
    <header class="bg-dark  shadow-sm ">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-p-3 text-white " href="/">Bookers</a>
          <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon bg-white"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
 
            <% if user_signed_in? %>
            <li class="nav-item text-white">
            <i class="fas fa-link"></i>
            <a href="/users/new", class= "btn btn-dark">About</a>
            </li> 
            <li class="nav-item ">
            <i class="fas fa-sign-in-alt text-white"></i>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-dark" %>
            </li class="nav-item">
            <% else %>
            <li class="nav-item text-white">
            <i class="fas fa-link"></i>
            <a href="/users/new", class= "btn btn-dark">About</a>
            </li> 
            <li. class="nav-item ">
            <i class="fas fa-user text-white"></i>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-dark" %>
            </li>
            <li class="nav-item">
            <i class="fas fa-sign-in-alt text-white"></i>
            <%= link_to "Log in", new_user_session_path, class: "btn btn-dark" %>
            </li>
            <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
        <footer class="bg-white text-dark pt-5 pb-4">
      <div class="container ">
        <div class="row no-gutters d-flex justify-content-center">
          <div class="col-md-4">
            <p>CopyRight infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
