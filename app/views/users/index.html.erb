<!--<h1>users画面</h1>-->
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class~"col-md-3">
  <%= render 'users/info', user: @user %>
  <%= render 'books/list', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
   <% @users.each do |user| %>
   <table class="table">
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <tr>
    <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: 'no_image.jpg' %></td> <!--5章記述-->
    <td>name:<%= user.name %></td>
    <td><%= link_to "show" , user_path(user.id) %></td>
    </tr>
    </tbody>
    </table>
<% end %>
  </div>
 </div>
</div>