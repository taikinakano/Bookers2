<!--<h1>マイページ編集画面です</h1>-->
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 for='user_name'>User info</h2>
    <div id="notice" class="text-danger">
     <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>  error prohibited this obj from being saved:</h3>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
    </div>
    <%= form_with model:@user, local:true do |f| %>
     
     <div class="form-group">
     <label for='user_name'>Name</label>
     <%= f.text_field :name, autofocus: true, class: "form-control user_name" %>
     </div>
     <div class="form-group">
     <div>Image</div>
     <%= f.attachment_field :profile_image %>
     </div>
     <div class="form-group">
     <label for="user_introduction">Introduction</label>
     <%= f.text_area :introduction, autofocus: true, class: "form-control user_introduction" %>
     </div>
     <div class="form-group">
     <%= f.submit "Update User", class: "btn btn-secondary" %>
     </div>
     
 <% end %>
  </div>
 </div>
</div>