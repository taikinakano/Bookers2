<!--<h1>booksから飛ぶリンクページ</h1>-->
<%= render 'users/info', user: @user %>
<%= render 'books/list', book: @book %>
<h1>Books</h1>
<%= @books.each do |book| %>
<div>
    <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: 'no_image.jpg' %></p> <!--5章記述-->
    <p>Title:<%= book.title %></p>
    <p>Opinion:<%= book.body %></p>
</div>
<% end %>