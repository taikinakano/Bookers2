<!--<h1>booksから飛ぶリンクページ</h1>-->
<%= render 'users/info', user: @user %>
<%= render 'books/list', book: @book %>

<%= @books.each do |book| %>
<div>
    <%= attachment_image_tag book, :image %>
    <p><%= image_tag('no_image.jpg')%></p>
    <p>Title:<%= book.text %></p>
    <p>Opinion:<%= book.text %></p>
</div>
<% end %>