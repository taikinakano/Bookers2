<!--<h1>booksから飛ぶリンクページ</h1>-->
<p class="notice">
 <% if @book.errors.any? %>
 <p><%= @book.errors.count %>件のエラーが発生しました</p>
 <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>
</p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
<%= render 'users/info', user: @user %>
<%= render 'books/list', book: @book %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-hover table-inverse">
<thead>
 <tr>
  <th></th>
  <th>Title</th>
  <th>Option</th>
  <th colspan="3"></th>
 </tr>
 </thead>
 <%= @books.each do |book| %>
 <tbody>
  <tr>
  <td>
    <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: 'no_image.jpg' %></p> <!--5章記述-->
  </td>
    <td>Title:<%= book.title %></td>
    <td>Opinion:<%= book.body %></td>
  </tr>
  <% end %>
</tabl>
</div>
</div>
</div>
</div>