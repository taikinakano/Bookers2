<%= flash[:notice] %>
<div class="container">
 <div class="row">
  <div class="col-md-3">
<%= render 'users/info', user: @user %>
<%= render 'books/list', book: @book %>
 </div>
 <div class="col-md-8 offset-md-1">
 <table class="table">
<h2>Book detail</h2>
 <tbody>
  <tr>
   <td>
    <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg" %>
    <p>
     <%= link_to user_path(current_user.id) do %>
     <%= @user.name %></a>
     <% end %>
    </p>
   </td>
   <td>
    <%= link_to book_path(current_user.id) do %>
    <%= @book.title %>
    <% end %>
    </td>
   <td><%= @book.body %></td>
 <% if @book.user == current_user %>
   <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
   <td><%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete %></td>
 <% end %>
  </tr>
  </tbody>
  </table>
  </div>
  </div>
 </div>
